{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig' %}

{% block body %}

    {# CONTENU PRINCIPAL #}
    <main role="main">

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        <div class="login">

            {# Formulaire de connexion #}
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-connexion">
            
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                {# Champ id #}
                <input type="text" class="input" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username"/>

                {# Champ mot de passe #}
                <input type="password" class="input" id="password" name="_password" required="required" placeholder="Password"/>

                {# Se souvenir de moi #}
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me" class="remember-me">Se souvenir de moi</label>

                {# Bouton se connecter #}
                <input type="submit" class="bouton-connexion" id="_submit" name="_submit" value="Connexion"/>

                <div class="login-help">
                    <a href="{{ path('fos_user_registration_register') }}">S'inscrire</a>
                    <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©</a>
                </div>

            </form>
                    
        </div>

    </main>
    {# FIN CONTENU PRINCIPAL #}

{% endblock body %}

{% block javascripts %}{% endblock %}