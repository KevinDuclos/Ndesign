{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig' %}

{% block body %}

    {# Image connexion #}
    <div class="thumbnail">
        <img src="{{ asset('assets/img/bg-p-connexion.jpg') }}" alt="" class="img-connexion">
        <div class="traduction">*Heureux de vous revoir</div>        
    </div>

    {# CONTENU PRINCIPAL #}
    <main role="main">

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        <div class="login">

            {# Icône user connexion #}
            <div class="bloc-icone-user">
                <img src="{{ asset('assets/img/user.svg') }}" alt="" class="icone-user-connexion">            
            </div>

            {# Formulaire de connexion #}
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-connexion">
            
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                {# Champ id #}
                <input type="text" class="input-text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Email/pseudo"/>

                {# Champ mot de passe #}
                <input type="password" class="input-text" id="password" name="_password" required="required" placeholder="Mot de passe"/>

                {# Se souvenir de moi #}
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me" class="remember-me">Se souvenir de moi</label>

                {# Bouton se connecter #}
                <input type="submit" class="bouton-connexion" id="_submit" name="_submit" value="Connexion"/>

                {# Aide #}
                <div class="aide-connexion">
                    <a href="{{ path('fos_user_registration_register') }}" class="sign-up">S'inscrire</a>
                    <a href="{{ path('fos_user_resetting_request') }}" class="forget-password">Mot de passe oublié</a>
                </div>

            </form>
                    
        </div>

    </main>
    {# FIN CONTENU PRINCIPAL #}

{% endblock body %}

{% block javascripts %}{% endblock %}