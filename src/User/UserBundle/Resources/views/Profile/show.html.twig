{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig' %}

{% block body %}

    {# Bandeau BONJOUR #}
    <div class="bandeau-bonjour">
        <div class="texte-bonjour">
            <p>Bonjour, <span style="font-weight: 500;">{{ user.username }}</span> !</p>
            <p style="font-size: 18px; margin-top: 7px;">({{ user.email }})</p>            
        </div>
    </div>

    {# CONTENU PRINCIPAL #}
    <main role="main">

        {# Menu + contenu #}
        <div class="menu">

            {# Menu #}
            <div class="sidebar">

                <a href="#" class="lien-sidebar">              
                    <h3 class="sidebar-titre">Tableau de bord</h3>
                </a>

                <a href="#" class="lien-sidebar">              
                    <h3 class="sidebar-titre">Mes infos</h3>
                </a>

                <a href="#" class="lien-sidebar">                
                    <h3 class="sidebar-titre">Mot de passe</h3>
                </a>

                <a href="#" class="lien-sidebar">                
                    <h3 class="sidebar-titre">Mode de paiement</h3>
                </a>

                <a href="#" class="lien-sidebar">                
                    <h3 class="sidebar-titre">Mes commandes</h3>
                </a>

            </div>

            {# Contenu de chacun des menus #}
            <div class="content-menu">
                
                {# Formulaire MES INFOS #}
                <section class="mes-infos">

                    <h3 class="titre-formulaire">Mes informations</h3>

                    <form method="post" class="formulaire-infos">

                        {# Champ pseudo #}
                        <label for="" class="label-formulaire">Pseudo</label>
                        <input type="text" class="input-formulaire" id="" name="">

                        {# Champ mail #}
                        <label for="" class="label-formulaire">Adresse e-mail</label>
                        <input type="email" class="input-formulaire" id="" name="">

                        <button type="submit" class="button-save">Enregistrer</button>

                    </form>
                    
                </section>

            </div>

        </div>

    </main>

{% endblock body %}
