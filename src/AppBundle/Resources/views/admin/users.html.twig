{% extends ('base_admin.html.twig') %}

{% block body %}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">	
    <h1>Liste des utilisateurs</h1>
        {% for user in users %}

       
        <div class="card col-md-4" >

            <div class="card-body">
                <h5 class="card-title">{{ user.username }}</h5>
                <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-primary">Voir le profil de l'utilisateur</a>
                <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-primary">Editer le profil de l'utilisateur</a>
            </div>
        </div>
        {% endfor %}
     
</div>
{% endblock %}

