{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produits list</h1>

    <table>
        <thead>
            <tr>
                <th scope="row">Id</th>
                <th scope="row">Titre</th>
                <th scope="row">Prix</th>
                <th scope="row">Poids</th>
                <th scope="row">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td class="btn btn-warnig"  scope="col"><a  href="{{ path('produit_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                <td scope="col">{{ produit.titre }}</td>
                <td scope="col">{{ produit.prix }}</td>
                <td scope="col">{{ produit.poids }}</td>
                <td scope="col">
                    <ul>
                        <li>
                            <a href="{{ path('produit_show', { 'id': produit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('produit_edit', { 'id': produit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produit_new') }}">Create a new produit</a>
        </li>
    </ul>
{% endblock %}
