{% extends 'base_admin.html.twig' %}

{% block body %}
    <h1>Produit</h1>

    <table>
        <tbody>
            <tr>
                <th scope="row">Id</th>
                <td scope="col">{{ produit.id }}</td>
            </tr>
            <tr>
                <th scope="row">Titre</th>
                <td scope="col">{{ produit.titre }}</td>
            </tr>
            <tr>
                <th scope="row">Prix</th>
                <td scope="col">{{ produit.prix }}</td>
            </tr>
            <tr>
                <th scope="row">Poids</th>
                <td scope="col">{{ produit.poids }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('app_produits') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('produit_edit', { 'id': produit.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
