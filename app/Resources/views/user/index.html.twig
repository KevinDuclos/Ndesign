 scope="row"{% extends 'base_admin.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th scope="row">Id</th>
                <th scope="row">Created_at</th>
                <th scope="row">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td scope="col"><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td scope="col">{% if user.createdat %}{{ user.createdat|date('Y-m-d') }}{% endif %}</td>
                <td scope="col">
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
